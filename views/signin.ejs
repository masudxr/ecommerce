<html lang="en">
<head>
    <title> My First WS ! <%= title %></title>
    <link rel="stylesheet" href="/main.css" type="text/css">
</head>
<body>
    <div class="headersection" template>
        <a href="/">
            <h2> eCommerce Shop!! </h2>
        </a>
    </div>

 <section id="header">
            <a href="/"><img src="/logo.jpg" class="logo" alt=""></a>
            <div>
                <ul class="nav-list" template>
                    <li><a class="active"href="/">
                            <h2>Home</h2>
                        </a></li>
                        <li><a href='/registration'>
                            <h2>Registration</h2>
                        </a></li>
                    <li><a href='/contact'>
                            <h2>Contact</h2>
                        </a></li>
                        <form action="/search" method="get">
                            <div class="search-wrapper">
                                <input name="name" type="search" id="search" placeholder="Search Products">
                                <a href=/search/:name><button type="submit">Search</button></a>
                            </div>
                        </form>
                    </ul>
                </div>
            </section>
    

<form action="/signin" method="post">
    <h2> User Sign In</h2>

        <label for="name">User Name:</label>
        <div class="input-field">
        <input type="text" id="name" placeholder="User Name" name="name" required>
        </div>
        <br><br>
        <label for="password">User Password:</label>
        <div class="input-field">
        <input type="text" id="password" placeholder="User Password" name="password" required>
        </div>
        <input type="submit" value="LogIn">
</form>

